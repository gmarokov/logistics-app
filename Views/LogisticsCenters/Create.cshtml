@model app.web.Models.Entities.LogisticsCenter

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>LogisticsCenter</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                Trigger the lookup for the furthest by average distance place,
                then select the closest to that place as logistics center.
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
